{
  "name": "it-stats-revamp-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:api": "turbo build --filter=api",
    "build:web": "turbo build --filter=web",
    "start": "bun --filter api run start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "bun --filter db run generate",
    "db:migrate": "bun --filter db run migrate",
    "db:push": "bun --filter db run push",
    "db:studio": "bun --filter db run studio",
    "deploy:railway": "railway up",
    "deploy:api": "railway up --service it-stats-api",
    "deploy:web": "cd apps/web && railway up --service it-stats-web"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.3",
    "eslint": "^9.25.1",
    "prettier": "^3.2.5",
    "turbo": "^2.6.0"
  },
  "packageManager": "bun@1.3.1",
  "dependencies": {
    "@types/pg": "^8.15.4",
    "pg": "^8.16.3"
  }
}
