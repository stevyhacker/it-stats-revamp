{
  "compilerOptions": {
    "noEmit": false,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ES2020"],
    "types": ["node"],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "db": ["../../packages/db/dist/index.js"],
      "db/*": ["../../packages/db/dist/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
