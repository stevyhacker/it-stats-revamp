{
  "extends": "../../tsconfig.json", // Assuming a root tsconfig will be created later
  "compilerOptions": {
    "noEmit": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",          // Required for Hono JSX middleware
    "jsxImportSource": "hono/jsx", // Required for Hono JSX middleware
    "lib": ["ESNext"],
    "types": ["node"],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
